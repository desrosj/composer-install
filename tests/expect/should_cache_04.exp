#!/usr/bin/env -S expect -f

set gitHubOutputFile should_cache_04.txt
set ::env(GITHUB_OUTPUT) $gitHubOutputFile

set timeout 3
spawn ../../bin/should_cache.sh "true"
match_max 100000

expect -exact "::debug::We will NOT cache the dependencies because ignore-cache is set to 'true'"
expect eof

set fp [open $gitHubOutputFile r]
set fileData [read $fp]
close $fp

set expectedValue "do-cache=0\n"

if { $expectedValue != $fileData } {
    puts "\nExpected output variable does not match. Received:\n"
    puts $fileData
    exit 1
}

# Clean up
file delete $gitHubOutputFile
